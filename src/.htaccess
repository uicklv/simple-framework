<IfModule mod_rewrite.c>
  RewriteEngine On

    # Правило для видалення кінцевого слешу
   RewriteCond %{REQUEST_URI} ^(.+)/$
   RewriteRule ^ %1 [R=301,L]

   # Правило для перенаправлення всього трафіку на public
   RewriteCond %{REQUEST_URI} !^/public/
   RewriteRule ^ public/%{REQUEST_URI} [L,NC]
</IfModule>
